<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="myTextViewStyle" format="reference" />
    <attr name="myButtonStyle" format="reference" />

    <!-- Custom styles -->
    <style name="MyTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#000000</item> <!-- Change text color to black -->
        <item name="android:textSize">18sp</item> <!-- Change text size to 18sp -->
        <item name="android:padding">16dp</item> <!-- Add padding of 16dp -->
        <item name="android:layout_gravity">center</item> <!-- Center the TextView -->
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">#000000</item> <!-- Change text color to white -->
        <item name="android:background">#673AB7</item> <!-- Change background color to purple -->
        <item name="android:textSize">16sp</item> <!-- Change text size to 16sp -->
    </style>
</resources>
